                    confirmPassword.setCustomValidity("Las contraseñas no coinciden");
                } else {
                    confirmPassword.setCustomValidity("");
                }
            });
        }); */
    </script>
</head>
<body>
    <header>
        <%- include("./partials/header") %>
    </header>

    <main>
        <div class="contenedor">
        <h3>Registro</h3>
        
        <form action="/user/register" method="POST" enctype="multipart/form-data" class="register-form">

            <label for="name">Nombre</label>
            <div class="input-container">
                <input type="text" id="name" name="name" class="input-text"
                value="<%= locals.oldData ? oldData.name : null %>">
                <p class="input-container__item namep"></p>
            </div>
            <% if(locals.errors && errors.name){ %>
                <p class="text-error">
                    <%= errors.name.msg %>
                </p>
            <% } %>

            <label for="surname">Apellido</label>
            <div class="input-container">
                <input type="text" id="surname" name="surname" class="input-text"
                value="<%= locals.oldData ? oldData.surname : null  %>">
                <p class="input-container__item surnamep"></p>
            </div>
            <% if(locals.errors && errors.surname){ %>
                <p class="text-error">
                    <%= errors.surname.msg %>
                </p>
            <% } %>
<!-- ________________________________________________________ Hacer la validacion del gender para el lado del fronted________________________ -->
            <p>Genero</p>
            <p class="genderp" style="color: #555;"></p>
            <div class="radio-block">
                <div class="radio-block__element">
                    <label for="M">Masculino
                    <input type="radio" name="gender" id="M" value="M" 
                    <% if(locals.oldData && oldData.gender == "M") { %>checked<% } %> >
                    </label>
                </div>
                <div class="radio-block__element">
                    <label for="F">Femenino
                        <input type="radio" name="gender" id="F" value="F"
                        <% if(locals.oldData && oldData.gender == "F") { %>checked<% } %> >
                    </label>
                </div>
            </div>
            <% if(locals.errors && errors.gender){ %>
                <p class="text-error">
                    <%= errors.gender.msg %>
                </p>
            <% } %>

            <div class="file-block">
                <p class="text-file">Imagen de perfil</p>
                <label for="uploadAvatar" class="labelUpload">Elegir Archivo</label>
                <div class="input-container">
                    <input type="file" id="uploadAvatar" name="avatarFile">
                    <% if(locals.file) {%>
                        <p style="padding-left: 5px;"> <%= file.originalname %> </p>
                    <% } else { %>
                            <p class="avatarFilep" style="padding-left: 5px;"></p>
                    <% } %>
                </div>
            </div>
            <% if(locals.errors && errors.avatarFile){ %>
                <p class="text-error">
                    <%= errors.avatarFile.msg %>
                </p>
            <% } %>

            <label for="email">Correo Electrónico</label>
            <div class="input-container">
                <input type="text" id="email" name="email" class="input-text"
                value="<%= locals.oldData ? oldData.email : null %>">
                <p class="input-container__item emailp"></p>
            </div>
            <% if(locals.errors && errors.email){ %>
                <p class="text-error">
                <%= errors.email.msg %>
            </p>
            <% } %>
            
            <label for="contraseña">Contraseña</label>
            <div class="input-container">
                <input type="password" id="contraseña" name="password" class="input-text"
                value="<%= locals.oldData ? oldData.password : null %>">
                <p class="input-container__item passwordp"></p>
            </div>
            <% if(locals.errors && errors.password){ %>
                <p class="text-error">
                    <%= errors.password.msg %>
                </p>
            <% } %>
            
            <label for="confirmarContraseña">Confirme su contraseña</label>
            <div class="input-container">
                <input type="password" id="confirmarContraseña" name="repassword" class="input-text"
                value="<%= locals.oldData ? oldData.repassword : null %>">
                <p class="input-container__item repasswordp"></p>
            </div>
            <% if(locals.errors && errors.repassword){ %>
                <p class="text-error">
                    <%= errors.repassword.msg %>
                </p>
            <% } %>
            

            <input type="submit" value="Registrarse">
        </form>
    </div>
    </main>
    
    <footer>
        <%- include("./partials/footer") %>
    </footer>
</body>
</html>
